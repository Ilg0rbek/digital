<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="css/project.css" />
    <title>
      <%= title %>
    </title>
</head>

<body class="index-page layout">
  <%- include('../partials/navbar.ejs') %>

    <main class="main">
      <div class="container mt-5 section">
        <div id="heading-container">
          <h1 id="heading" class="text-center my-4">Ijodiy Loyihalar</h1>
          <p class="subtitle text-center">Ta'lim jarayonida ijodiy yondashuvlar va innovatsion loyihalar
             <br><a href="/project-upload">Yangi loyinangizni yuklash</a>
          </p>
        </div>

        <div class="project-categories">
          <div class="category-item active">
            <i class="bi bi-lightbulb"></i>
            <span>Barchasi</span>
          </div>
          <div class="category-item">
            <i class="bi bi-puzzle"></i>
            <span>Topshiriqlar</span>
          </div>
          <div class="category-item">
            <i class="bi bi-palette"></i>
            <span>Dizayn</span>
          </div>
          <div class="category-item">
            <i class="bi bi-book"></i>
            <span>Ta'lim</span>
          </div>
          <div class="category-item">
            <i class="bi bi-tree"></i>
            <span>Tabiat</span>
          </div>
        </div>

        <div class="projects-grid">
          <% projects.forEach(project => { %>
            <div class="project-card">
              <div class="project-image">
                <img src="<%= project.image %>" alt="<%= project.title %>">
                <div class="project-overlay">
                  <span class="project-tag"><%= project.category %></span>
                </div>
              </div>
              <div class="project-content">
                <h3><%= project.title %></h3>
                <p><%= project.description %></p>
                <div class="project-footer">
                  <a href="<%= project.link %>" class="project-link">
                    <i class="bi bi-arrow-right"></i>
                    Batafsil
                  </a>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    </main>

    <a href="#" id="scroll-top" class="scroll-top">
      <i class="bi bi-arrow-up-short"></i>
    </a>

    <%- include('../partials/footer.ejs') %>
</body>

</html>